<section class="pageTitle">
    <h1>Your Dashboard</h1>
</section>

<div class="projectCard">
    <div class="projectTitle">
        <h2>Edit Post</h2>
    </div>
    <form class="post-form">
        <div class="form-group">
            <label for="title-new">Title</label><br>
            <input class="form-input" type="text" id="title-new" value="{{ project.title }}">
        </div>
        <div class="form-group">
            <label for="content-new">Content</label><br>
            <textarea name="content-new" id="content-new">{{ project.content }}</textarea>
        </div>
        <input type="hidden" id="project_id" name="project_id" value="{{ project.id }}">
        <div class="form-group">
            <button class="createPostBtn" type="submit">Update Post</button>
        </div>
    </form>
    <div class="form-group">
        <button id="deletePostBtn" class="deletePostBtn" type="submit" value="{{ project.id }}">Delete</button>
    </div>
</div>

<script src="/js/projectEdit.js"></script>